
@{
	ViewBag.Title = "IncomeCertificate";
	Layout = "~/Views/Shared/_RevenueMasterLayout.cshtml";
}

<style>
	.card {
		box-shadow: 0 3px 15px 0 #E0E0E0;
		border-radius: 11px;
	}

	.card-header .card-title {
		font-weight: 800;
		font-family: "Roboto";
		font-size: 16px;
	}

	.card-body fieldset {
	}

	.card-body .bg-primary-800 {
		background-color: #174d8b;
	}

	.card-body legend {
		margin-bottom: 0.50rem;
		font-family: "Roboto", Arial, sans-serif !important;
		font-weight: 600;
		font-size: 13px;
		padding: 5px 10px !important;
	}

	.card-body .form-group {
		margin: 0.5rem 0.5rem;
	}

		.card-body .form-group .required {
			color: red;
		}

		.card-body .form-group .form-control, .card-body .form-group button {
			padding: 0.2rem 1rem !important;
			height: 28.4px;
		}

		.card-body .form-group select.form-control:not([size]):not([multiple]) {
			height: 28.4px;
		}

		.card-body .form-group .btn-primary {
			background-color: #174d8b;
		}
</style>
@Html.AntiForgeryToken()

<div class="page-content pt-0 background-container" ng-app="GSWS"  ng-controller="IncomeController">
	<!-- Main content -->
	<div class="content-wrapper">
		<!-- Content area -->
		<div class="content ">
			<div class="container-fluid">

				<div class="card mt-3">
					<div class="card-header bg-indigo py-1">
						<h5 class="card-title text-center text-uppercase">Income Certificate Request</h5>
					</div>

					<div class="card-body">
						<div class="inner-form">
