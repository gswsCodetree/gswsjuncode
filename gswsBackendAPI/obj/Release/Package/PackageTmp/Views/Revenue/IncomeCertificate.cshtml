											<option value="D/O">D/O</option>
											<option value="W/O">W/O</option>
											<option value="H/O">H/O</option>
											<option value="M/O">M/O</option>
											<option value="F/O">F/O</option>
											<option value="H/O">H/O</option>
											<option value="Self">Self</option>
										</select>
